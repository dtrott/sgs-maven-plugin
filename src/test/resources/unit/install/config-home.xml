<project>
  <build>
    <plugins>
      <plugin>
	<groupId>com.projectdarkstar.maven.plugin</groupId>
        <artifactId>sgs-maven-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>install</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
	  <sgsHome>${basedir}/target/test-classes/unit/install/home/sgs-server-dist-${minimum.sgs.version}</sgsHome>
          <outputDirectory>${basedir}/target/test-classes/unit/install/home</outputDirectory>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
